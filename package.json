{
  "name": "jsarch",
  "version": "1.3.0",
  "description": "A simple module to extract architecture notes from your code.",
  "main": "src/index.js",
  "metapak": {
    "configs": [
      "readme",
      "travis",
      "eslint",
      "codeclimate",
      "mocha",
      "jsdocs",
      "jsarch"
    ],
    "data": {
      "files": "src/*.js",
      "testsFiles": "src/*.mocha.js"
    }
  },
  "scripts": {
    "architecture": "jsarch src/*.js > ARCHITECTURE.md",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "cli": "env NODE_ENV=${NODE_ENV:-cli}",
    "cover": "istanbul cover _mocha --report html -- src/*.mocha.js -R spec -t 5000",
    "coveralls": "istanbul cover _mocha --report lcovonly -- src/*.mocha.js -R spec -t 5000 && cat ./coverage/lcov.info | coveralls && rm -rf ./coverage",
    "cz": "env NODE_ENV=${NODE_ENV:-cli} git cz",
    "doc": "mkdir -p .readme; echo \"# API\" > .readme/API.md; jsdoc2md src/*.js >> .readme/API.md",
    "graph": "npm run graph:build && npm run graph:generate",
    "graph:build": "MERMAID_RUN=1 node bin/jsarch.js > DEPENDENCIES.mmd",
    "graph:generate": "mmdc -i DEPENDENCIES.mmd -o DEPENDENCIES.mmd.png",
    "jsarch": "node bin/jsarch.js",
    "lint": "eslint src/*.js",
    "metapak": "metapak",
    "mocha": "mocha src/*.mocha.js",
    "precz": "npm run graph && npm run architecture",
    "prettier": "prettier --write src/*.js",
    "preversion": "npm t && npm run lint && npm run metapak -s",
    "test": "npm run mocha",
    "version": "npm run changelog && git add CHANGELOG.md"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nfroidure/jsarch.git"
  },
  "keywords": [
    "architecture",
    "documentation"
  ],
  "bin": {
    "jsarch": "bin/jsarch.js"
  },
  "dependencies": {
    "ast-types": "^0.10.1",
    "bluebird": "^3.5.1",
    "commander": "^2.13.0",
    "debug": "^3.1.0",
    "espree": "^3.5.2",
    "glob": "^7.1.2",
    "knifecycle": "^2.4.2",
    "yerror": "^2.1.0"
  },
  "devDependencies": {
    "commitizen": "^2.9.6",
    "conventional-changelog-cli": "^1.3.8",
    "coveralls": "^3.0.0",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^4.16.0",
    "eslint-plugin-mongodb": "0.2.4",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-prettier": "^2.5.0",
    "eslint-plugin-promise": "^3.6.0",
    "istanbul": "^0.4.5",
    "jsarch": "^1.2.6",
    "jsdoc-to-markdown": "^4.0.1",
    "mermaid": "^7.1.2",
    "mermaid.cli": "^0.3.1",
    "metapak": "1.0.2",
    "metapak-nfroidure": "3.0.0",
    "mocha": "^5.0.0",
    "mocha-lcov-reporter": "^1.3.0",
    "phantomjs": "^2.1.7",
    "prettier": "^1.10.2",
    "sinon": "^1.17.7"
  },
  "author": "Nicolas Froidure",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nfroidure/jsarch/issues"
  },
  "homepage": "https://github.com/nfroidure/jsarch#readme",
  "engines": {
    "node": ">=6.9.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "greenkeeper": {
    "ignore": [
      "commitizen",
      "cz-conventional-changelog",
      "conventional-changelog-cli",
      "eslint",
      "eslint-config-prettier",
      "prettier",
      "mocha",
      "mocha-lcov-reporter",
      "coveralls",
      "istanbul",
      "jsdoc-to-markdown",
      "jsarch"
    ]
  }
}
